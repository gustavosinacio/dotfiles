{
	// "layer": "top", // Waybar at top layer
	// "position": "bottom", // Waybar position (top|bottom|left|right)
	// "height": 14, // Waybar height (to be removed for auto height)
	// "width": 1280, // Waybar width

	// Choose the order of the modules
    "modules-left": [
      "hyprland/workspaces",
      "hyprland/mode",
      "custom/gits",
    ],
	// "modules-center": ["hyprland/window"],
	"modules-right": [
      "custom/disk_root",
      "cpu",
      "memory",
      "custom/mail",
      "network",
      "backlight",
      "pulseaudio",
      "battery",
      "idle_inhibitor",
      "clock",
      "tray",
    ],

	// Modules configuration
	 "hyprland/workspaces": {
	 	"disable-scroll": true,
	 	"all-outputs": true,
	 	"format": "{name}: {icon}",
	 	"format-icons": {
	 		"1": "ï„  ",
	 		"2": "ï‰¨ ",
	 		"3": "ï„¡ ",
	 		"4": "ïµ ",
	 		"9": "ï†¼ ",
	 		"default": "ï„‘ "
	 	}
	 },
	"hyprland/mode": {
      "format": "<span style=\"italic\">{}</span>",
	},
   "custom/gits": {
     "format": "{}",
     "exec": "~/unixverse/scripts/git-file-report.sh ~/unixverse/ ~/dotfiles/ ~/obsidian/",
     "interval": 30,
     "on-click": "",
   },
	"custom/disk_root": {
    "format": "<span color='#FEEC37'>ó°Ÿœ {} </span>",
		"interval": 30,
		"exec": "df -h --output=avail / | tail -1 | tr -d ' '"
	},
	"cpu": {
		"format": "<span color='#f04e2e'>ï‹› {usage}%</span>",
		"tooltip": false
	},
	"memory": {
      "format": "<span color='#1efece'>î‰¦ {used:0.1f}G</span>"
	},
	"custom/mail": {
		"format": "ó°‡° {}",
		"interval": 30,
		"exec": "notmuch count tag:flagged OR tag:inbox AND NOT tag:killed"
	},
	"network": {
		"family": "ipv6",
		// "interface": "wlp2*", // (Optional) To force the use of this interface
      "format-wifi": "<span color='#589df6'>ï‡« </span> <span color='#3f89ff'>{bandwidthUpBits} ï…¶</span> <span color='#43ce3e'>ï…µ {bandwidthDownBits}</span>",
      "format-ethernet": " <span color='#589df6'>ï– </span><span color='#3f89ff'>{bandwidthUpBits} ï…¶</span> <span color='#43ce3e'>ï…µ {bandwidthDownBits}</span> ",
		"format-linked": "{ifname} (No IP) ï–",
		"format-disconnected": "Disconnected âš ",
		"format-alt": "{ifname}: {ipaddr}/{cidr}",
		"tooltip-format": "<span color='gray'>{essid}</span> freq: {frequency} <span color='#3f89ff'>{bandwidthUpBits} ï…¶</span> <span color='#43ce3e'>ï…µ{bandwidthDownBits}</span>",
		"interval": 5
	},
	"backlight": {
		"format-icons": ["ğŸ”…", "ğŸ”†"]
	},
	"pulseaudio": {
		// "scroll-step": 1, // %, can be a float
		"format": "{icon} {volume}% {format_source}",
		"format-muted": "ğŸ”‡ {format_source}",
		"format-bluetooth": "{icon}ïŠ” {volume}% {format_source}",
		"format-bluetooth-muted": "ğŸ”‡ïŠ” {format_source}",

		"format-source": "ï„° {volume}%",
		"format-source-muted": "ï„±",

