			"portable": "ï‚•",
			"car": "ï†¹",
         "default": ["ï€¦ ", "ï€§ ", "ï€¨ "],
		},
		"on-click": "ponymix -N -t sink toggle",
		"on-click-right": "ponymix -N -t source toggle"
	},
	"clock": {
		"interval": 1,
		"format": "{:%H:%M}",
		"tooltip-format": "{:%Y-%m-%d | %H:%M:%S}"
		// "format-alt": "{:%Y-%m-%d}"
	},
	"battery": {
		"states": {
			// "good": 95,
			"warning": 20,
			"critical": 10
		},
		"format": "<span color='#e88939'>{icon}</span> {capacity}%",
		"format-charging": "<span color='#e88939'>ï—§ </span> {capacity}%",
		"format-plugged":  "<span color='#e88939'>{icon}ï‡¦ </span> {capacity}% ({time})",
      "tooltip-format": "({time})",
		// "format-good": "", // An empty format will hide the module
		// "format-full": "",
		"format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
	},
	"battery#bat2": {
