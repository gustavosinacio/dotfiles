set expandtab
set tabstop=4
set softtabstop=2
set shiftwidth=2

"-- Highlight search results
set hlsearch
"-- Incremental search
set incsearch
"-- Ignore case in search patterns
set ignorecase
"-- Override ignorecase if search pattern contains uppercase letters
set smartcase
"-- Disable line wrap
set nowrap
"-- Highlight the current line
set cursorline
"-- Enable true color support
set termguicolors
"-- Always show the sign column
set signcolumn=yes
