{
  "window.commandCenter": true,
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-mocha",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "JetBrainsMono Nerd Font, Ink Free",
  "editor.fontSize": 20,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "trailing",
  "files.exclude": {
    ".idea": true
  },
  "vim.camelCaseMotion.enable": true,
  "vim.easymotion": true,
  "vim.leader": " ",
  "vim.commandLineModeKeyBindingsNonRecursive": [],
  "vim.insertModeKeyBindingsNonRecursive": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<Esc>"],
      "after": [":nohlsearch"]
    },
    {
      "before": ["<leader>", "a"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["\\"],
      "commands": ["workbench.explorer.fileView.focus"]
    },
    {
      "before": ["<leader>", "s", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "s", "g"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "g", "p"],
      "commands": ["git.openLineChange"]
    },
    {
      "before": ["<leader>", "g", "p"],
      "commands": ["git.openChange"]
    },
    {
      "before": ["<leader>", "h", "r"],
      "commands": ["git.revertSelectedRanges"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["editor.action.marker.this"]
    },
    {
      "before": ["<leader>", "k", "s"],
      "commands": ["workbench.action.openGlobalKeybindings"]
    },
    {
      "before": ["<leader>", "1"],
      "commands": ["workbench.action.openEditorAtIndex1"]
    },
    {
      "before": ["<leader>", "2"],
      "commands": ["workbench.action.openEditorAtIndex2"]
    },
    {
      "before": ["<leader>", "3"],
      "commands": ["workbench.action.openEditorAtIndex3"]
    },
    {
      "before": ["<leader>", "4"],
      "commands": ["workbench.action.openEditorAtIndex4"]
    },
    {
      "before": ["<leader>", "5"],
      "commands": ["workbench.action.openEditorAtIndex5"]
    },
    {
      "before": ["<leader>", "6"],
      "commands": ["workbench.action.openEditorAtIndex6"]
    },
    {
      "before": ["<leader>", "7"],
      "commands": ["workbench.action.openEditorAtIndex7"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["l", "g"],
      "commands": ["lazygit.openLazygit"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["editor.action.goToNextReference"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["editor.action.goToPreviousReference"]
    }

    // {
    //   "before": ["n"],
    //   "after": ["n", "z", "z"]
    // },
    // { "before": ["<c-d>"],
    //   "after": ["<c-d>", "z", "z"]
    // },
    // {
    //   "before": ["<c-u>"],
    //   "after": ["<c-u>", "z", "z"]
    // },
    // {
    //   "before": ["<Esc>"],
    //   "commands": [":nohl"]
    // }
  ],

  "vim.handleKeys": {
    "<C-b>": false,
    "<C-f>": false,
    "<C-y>": false,
    "<C-e>": false,
    "<C-w>": false
    // "<C-v>": false,
    // "<C-s>": false,
    // "<C-z>": false,
    // "<C-p>": false,
    // "<C-q>": false,
    // "<C-n>": false,
    // "<C-x>": false,
    // "<C-a>": false,
  },
  "vim.operatorPendingModeKeyBindingsNonRecursive": [],
  "vim.visualModeKeyBindingsNonRecursive": [],
  "vim.vimrc.enable": true,
  "vim.highlightedyank.color": "#00aa00",
  "vim.hlsearch": true,
  "vim.enableNeovim": true,
  "vim.neovimConfigPath": "~/dotfiles/vscode/vscode.init.vim",
  "vim.vimrc.path": "~/dotfiles/vscode/.vscode.vimrc",
  "git.openRepositoryInParentFolders": "always",
  "editor.lineNumbers": "relative",
  "[snippets]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "vim.statusBarColorControl": true,
  "workbench.colorCustomizations": {
    "statusBar.background": "#181825",
    "statusBar.noFolderBackground": "#181825",
    "statusBar.debuggingBackground": "#181825",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff"
  },
  "vim.highlightedyank.textColor": "#00aa00",
  "vim.incsearch": true,
  "vim.statusBarColors.normal": ["#181825", "#ffffff"],
  "vim.statusBarColors.insert": ["#007acc", "#ffffff"],
  "vim.statusBarColors.visual": ["#5f00af", "#ffffff"],
  "vim.statusBarColors.visualline": ["#5f00af", "#ffffff"],
  "vim.statusBarColors.replace": ["#5f00af", "#ffffff"],
  "vim.statusBarColors.commandlineinprogress": ["#005f5f", "#ffffff"]
}
