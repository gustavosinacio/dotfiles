{
  "debug.console.fontSize": 14,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "JetBrainsMono Nerd Font, Ink Free",
  "editor.fontSize": 18,
  "editor.lineNumbers": "relative",
  "editor.renderWhitespace": "trailing",
  "editor.tabSize": 2,
  "editor.guides.bracketPairs": "active",
  "editor.rulers": [80, 120],
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "terminal.integrated.fontSize": 18,
  "window.commandCenter": true,
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-mocha",
  "[snippets]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // Vim ------------------------------------------------
  "vim.camelCaseMotion.enable": true,
  "vim.leader": " ",
  "vim.easymotion": true,
  // "vim.commandLineModeKeyBindingsNonRecursive": [],
  // "vim.insertModeKeyBindingsNonRecursive": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "a"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["\\"],
      "commands": ["workbench.explorer.fileView.focus"]
    },
    {
      "before": ["<leader>", "s", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "s", "g"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "h", "p"],
      "commands": ["git.openLineChange"]
    },
    {
      "before": ["<leader>", "g", "p"],
      "commands": ["git.openChange"]
    },
    {
      "before": ["<leader>", "h", "r"],
      "commands": ["git.revertSelectedRanges"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["editor.action.marker.this"]
    },
    {
      "before": ["<leader>", "1"],
      "commands": ["workbench.action.openEditorAtIndex1"]
    },
    {
      "before": ["<leader>", "2"],
      "commands": ["workbench.action.openEditorAtIndex2"]
    },
    {
      "before": ["<leader>", "3"],
      "commands": ["workbench.action.openEditorAtIndex3"]
    },
    {
      "before": ["<leader>", "4"],
      "commands": ["workbench.action.openEditorAtIndex4"]
    },
    {
      "before": ["<leader>", "5"],
      "commands": ["workbench.action.openEditorAtIndex5"]
    },
    {
      "before": ["<leader>", "6"],
      "commands": ["workbench.action.openEditorAtIndex6"]
    },
    {
      "before": ["<leader>", "7"],
      "commands": ["workbench.action.openEditorAtIndex7"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["l", "g"],
      "commands": ["lazygit.openLazygit"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["editor.action.goToNextReference"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["editor.action.goToPreviousReference"]
    }
  ],
  "vim.handleKeys": {
    "<C-b>": false,
    "<C-f>": false,
    "<C-y>": false,
    "<C-e>": false,
    "<C-m>": false,
    "<C-s>": false,
    "<C-w>": false
    // "<C-v>": false,
    // "<C-z>": false,
    // "<C-p>": false,
    // "<C-q>": false,
    // "<C-n>": false,
    // "<C-x>": false,
    // "<C-a>": false,
  },
  // "vim.operatorPendingModeKeyBindingsNonRecursive": [],
  // "vim.visualModeKeyBindingsNonRecursive": [],
  "vim.enableNeovim": true,
  "vim.highlightedyank.color": "#00aa00",
  "vim.highlightedyank.textColor": "#00aa00",
  "vim.hlsearch": true,
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/dotfiles/vscode/.vscode.vimrc",
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.insert": ["#007acc", "#ffffff"],
  "vim.statusBarColors.searchinprogressmode": ["#ea5605", "#ffffff"],
  "vim.statusBarColors.visual": ["#5f00af", "#ffffff"],
  "vim.statusBarColors.visualline": ["#5f00af", "#ffffff"],
  "vim.statusBarColors.replace": ["#5f00af", "#ffffff"],
  "vim.statusBarColors.commandlineinprogress": ["#005f5f", "#ffffff"],
  "workbench.colorCustomizations": {
    "statusBar.background": "#005f5f",
    "statusBar.noFolderBackground": "#005f5f",
    "statusBar.debuggingBackground": "#005f5f",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff"
  },
  "projectManager.sortList": "Path",
  "projectManager.tags": [
    "Personal",
    "Work",
    "Context",
    "Application"
  ],
  "window.menuBarVisibility": "toggle"
}
